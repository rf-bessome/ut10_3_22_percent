		ОтветСервера = КлиентWS.isReady();
		
		Состояние("");
		
		Если НРег(СокрЛП(ОтветСервера)) = "ready" Тогда
			Возврат Истина;
		Иначе
			Если ТипЗнч(ОтветСервера) = Тип("ОбъектXDTO") Тогда
				Возврат ВыполнитьКомандуПроверкиДоступностиСервиса(ОтветСервера);
			Иначе
				Возврат Ложь;
			КонецЕсли;
		КонецЕсли;
		
	Исключение
		Состояние("");
		ИнтернетПоддержкаПользователейВызовСервера.ЗаписатьОшибкуВЖурналРегистрации(
			ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
		Возврат Ложь;
	КонецПопытки;
	
