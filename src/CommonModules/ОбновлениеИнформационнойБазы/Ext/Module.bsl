//                          что и регистрация необходимости обработки
//                        - в ДополнительныеПараметры нужно передать соответствующий признак и полное имя регистра.
//  ДополнительныеПараметры - Структура - см. ОбновлениеИнформационнойБазы.ДополнительныеПараметрыОтметкиОбработки.
// 
Процедура ОтметитьКОбработке(Параметры, Данные, ДополнительныеПараметры = Неопределено) Экспорт
	
	Если Данные.Количество() = 0 Тогда 
		Возврат;
	КонецЕсли;
	
	МенеджерВременныхТаблиц = Новый МенеджерВременныхТаблиц;
	Если ТипЗнч(Данные) = Тип("ТаблицаЗначений") Тогда 
		Запрос = Новый Запрос;
		Запрос.УстановитьПараметр("Данные", Данные);
		Запрос.МенеджерВременныхТаблиц = МенеджерВременныхТаблиц;
		ПервоеПоле = Истина;
		Запрос.Текст = "ВЫБРАТЬ";
		Для Каждого Колонка Из Данные.Колонки Цикл 
			Запрос.Текст = Запрос.Текст + "
			|" + ?(ПервоеПоле, "", ",") + "Данные." + Колонка.Имя + " КАК " + Колонка.Имя;
			ПервоеПоле = Ложь;
			Запрос.Текст = Запрос.Текст + "
			|ПОМЕСТИТЬ ВТ
			|ИЗ &Данные КАК Данные";
		КонецЦикла;
		Запрос.Выполнить();
		Параметры = Новый Структура("Очередь, ОбработкаЗавершена",МенеджерВременныхТаблиц);
	Иначе 
		Типы = Новый Массив;
		Таблица = Новый ТаблицаЗначений;
		Таблица.Колонки.Добавить("ВремСсылка");
		
		Если Параметры<>Неопределено И ТипЗнч(Параметры.Очередь) = Тип("МенеджерВременныхТаблиц")Тогда 
			Запрос = Новый Запрос("ВЫБРАТЬ Ссылка ИЗ ВТ");
			Запрос.МенеджерВременныхТаблиц = Параметры.Очередь;
			Выборка = Запрос.Выполнить().Выбрать();
			Пока Выборка.Следующий() Цикл 
				Таблица.Добавить().ВремСсылка = Выборка.Ссылка;
				Тип = ТипЗнч(Выборка.Ссылка);
				Если Типы.Найти(Тип) = Неопределено Тогда 
					Типы.Добавить(Тип);
				КонецЕсли;
			КонецЦикла;
		КонецЕсли;
		
		Для Каждого Ссылка Из Данные Цикл 
			Таблица.Добавить().ВремСсылка = Ссылка;
			Тип = ТипЗнч(Ссылка);
			Если Типы.Найти(Тип) = Неопределено Тогда 
				Типы.Добавить(Тип);
			КонецЕсли;
		КонецЦикла;
		Таблица.Колонки.Добавить("Ссылка", Новый ОписаниеТипов(Типы));
		
		Для Каждого СтрокаТаблицы Из Таблица Цикл 
			СтрокаТаблицы.Ссылка = СтрокаТаблицы.Времссылка;
		КонецЦикла;
		
		Запрос = Новый Запрос;
		Запрос.МенеджерВременныхТаблиц = МенеджерВременныхТаблиц;
		Запрос.УстановитьПараметр("Данные", Таблица);
		Запрос.Текст = "ВЫБРАТЬ
			|Данные.Ссылка КАК Ссылка
			|ПОМЕСТИТЬ ВТ
			|ИЗ &Данные КАК Данные";
		Запрос.Выполнить();
		Параметры = Новый Структура("Очередь, ОбработкаЗавершена",МенеджерВременныхТаблиц);
	КонецЕсли;
	
КонецПроцедуры

