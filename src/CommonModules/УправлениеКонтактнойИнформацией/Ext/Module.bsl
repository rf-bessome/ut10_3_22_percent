// Функция по коду адресного классификатора возвращает имя ЖД станции из справочника Регионы
Функция ВернутьПоКодуАдресногоЭлементаЖДСтанциюНазначения(Код) Экспорт
	
	// формируем список кодов адресных элементов
	МаскаНаcеленногоПункта = МаскаНасПункта();
	КодЭлемента = Цел(Код / МаскаНаcеленногоПункта);
	
	МассивЭлементов = Новый Массив();
	МассивЭлементов.Добавить(КодЭлемента);
	МассивЭлементов.Добавить((Цел(КодЭлемента / 1000)*1000) * МаскаНаcеленногоПункта);
	МассивЭлементов.Добавить((Цел(КодЭлемента / 1000000)*1000000) * МаскаНаcеленногоПункта);
	МассивЭлементов.Добавить((Цел(КодЭлемента / 1000000000)*1000000000) * МаскаНаcеленногоПункта);
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ Разрешенные
		|	Регионы.КодАдресногоЭлемента КАК КОД,
		|	Регионы.ЖДСтанцияНазначения
		|ИЗ
		|	Справочник.Регионы КАК Регионы
		| ГДЕ Регионы.КодАдресногоЭлемента В (&КодыАдресногоЭлемента)
		|	И (Регионы.ЖДСтанцияНазначения <> """" ) ";
		
	Запрос.УстановитьПараметр("КодыАдресногоЭлемента", МассивЭлементов);
	РезультатЗапроса = Запрос.Выполнить();
	
	Если РезультатЗапроса.Пустой() Тогда
		Возврат "";
	КонецЕсли;
	
	ТаблицаРезультатов = РезультатЗапроса.Выгрузить();
	ТаблицаРезультатов.Индексы.Добавить("Код");
	
	Для СчетчикЦикла = 0 По 3 Цикл
		
		СтрокаРезультата = ТаблицаРезультатов.Найти(МассивЭлементов[СчетчикЦикла], "Код");
		Если (СтрокаРезультата <> Неопределено) И ЗначениеЗаполнено(СтрокаРезультата.ЖДСтанцияНазначения) Тогда
			Возврат СтрокаРезультата.ЖДСтанцияНазначения;
		КонецЕсли;
	
	КонецЦикла;
			
	// ничего не нашли...
	Возврат "";
	
КонецФункции

// Функция возвращает по строке с адресом (разделитель - запятая) ЖД станцию назначения
Функция ВернутьЖДСтанциюНазначенияПоАдресу(Знач СтрокаАдреса) Экспорт
	
	Если НЕ ЗначениеЗаполнено(СтрокаАдреса) Тогда
		Возврат "";
	КонецЕсли;
	
	СтруктураАдреса = ПолучитьСтруктуруАдресаИзСтроки(СтрокаАдреса);
	СтрокаЗаПределамиРФ = Неопределено;
	Если СтруктураАдреса = Неопределено ИЛИ СтруктураАдреса.Свойство("ЗаПределамиРФ", СтрокаЗаПределамиРФ) Тогда
		Возврат "";
	КонецЕсли;
	
	РодительскийЭлемент = ВернутьСтрокуАдресногоКлассификатораПоАдреснымЭлементам(СтруктураАдреса.Регион, СтруктураАдреса.Район, 
			СтруктураАдреса.Город, СтруктураАдреса.НаселенныйПункт, "");
			
	Если РодительскийЭлемент.Код = 0 Тогда
		Возврат "";
	КонецЕсли;
	
	НазваниеСтанции = ВернутьПоКодуАдресногоЭлементаЖДСтанциюНазначения(РодительскийЭлемент.Код);
	Возврат НазваниеСтанции;
	
