	ВерсияПостановления1137 = ВерсияПостановленияНДС1137(Дата);
	
	ВыводитьРНПТ = ВерсияПостановления1137 >= 5
		И ДанныеДляПечати.Свойство("СведенияОПрослеживаемости")
		И ЗначениеЗаполнено(Макет.Области.Найти("ОбластьПрослеживаемость"));
		
	БезПереходаПраваСобственности = Ложь;
