// Выполняет пересчет рублевых сумм таблицы если в настройках параметров учета
// выбран расчет суммы НДС в рублях по рублевой сумме документа
//
// ИсходнаяТаблица - таблица значений
//
// Параметры - структура с полями, перечисленными в функции "СтруктураПараметровДляПересчетаСуммВРубли"
// (это локальные параметры, т.е. их значения можно определить только в точке вызова)
//
// Колонки - структура с полями: Сумма, СуммаНДС, СтавкаНДС, Количество, Цена, СуммаБезНДС, СуммаСНДС, Метка - имена нужных колонок
// (необязательный, если не задан, то используются стандартные имена колонок)
//
Процедура ПерезаполнитьСуммыПоУЕвРублях(ИсходнаяТаблица, Параметры, Колонки = Неопределено) Экспорт
	
	РасчетНДСПоСтавке = УчетНДС.РасчетНДСвРубляхПоСтавкеДокумента(Параметры.ДатаПересчета);
	Если Не РасчетНДСПоСтавке = Истина Тогда
		Возврат;
	КонецЕсли;
	
	// Определение глобальных параметров
	Если Не Параметры.Свойство("ВалютаРегламентированногоУчета") Тогда
		Параметры.Вставить("ВалютаРегламентированногоУчета", глЗначениеПеременной("ВалютаРегламентированногоУчета"));
	КонецЕсли;
	// Определение имен колонок 
	к = Новый Структура("Сумма, СуммаНДС, СтавкаНДС, Количество, Цена, СуммаБезНДС, СуммаСНДС, Метка",
		"Сумма", "СуммаНДС", "СтавкаНДС", "Количество", "Цена", "СуммаБезНДС", "СуммаСНДС", "Метка");
	Если Колонки <> Неопределено Тогда
		Для Каждого Колонка Из Колонки Цикл
			к[Колонка.Ключ] = Колонка.Значение;
		КонецЦикла;
	КонецЕсли;
	зВозвратнаяТара = 2;
	// Если в исходной таблице нет колонки с меткой табличной части, значит распределять нужно по всем строкам таблицы
	ИскатьВозвратнуюТару = (ИсходнаяТаблица.Колонки.Найти(к.Метка) <> Неопределено);
	
	// Шаг 1.
	НеоплаченнаяСуммаВалИт = Параметры.СуммаРеализацииВалИт - Параметры.СуммаАвансаВалИт;
	НеоплаченнаяСуммаРубИт = МодульВалютногоУчета.ПересчитатьИзВалютыВВалюту(НеоплаченнаяСуммаВалИт,
		Параметры.ВалютаВзаиморасчетов, Параметры.ВалютаРегламентированногоУчета,
		Параметры.КурсРеализации, 1, Параметры.КратностьРеализации, 1);
	СуммаВзаиморасчетовРубИт = НеоплаченнаяСуммаРубИт + Параметры.СуммаАвансаРубИт;
		
	// Шаг 2.
	МассивРаспределения = Новый Массив();
	Для Каждого СтрокаТовар Из ИсходнаяТаблица Цикл
		Если ИскатьВозвратнуюТару И СтрокаТовар[к.Метка] = зВозвратнаяТара Тогда
			МассивРаспределения.Добавить(0);
		Иначе
			СуммаСНДС = СтрокаТовар[к.Сумма] + ?(Параметры.СуммаВключаетНДС, 0, СтрокаТовар[к.СуммаНДС]);
			МассивРаспределения.Добавить(СуммаСНДС);
		КонецЕсли;
	КонецЦикла;
	Если ИсходнаяТаблица.Колонки.Найти("СуммаРублевая") = Неопределено Тогда
		ИсходнаяТаблица.Колонки.Добавить("СуммаРублевая");
	КонецЕсли;
	УчетНДС.РаспределитьСуммуПоСтолбцу(МассивРаспределения, СуммаВзаиморасчетовРубИт, ИсходнаяТаблица, "СуммаРублевая");
	
	// Шаг 3.
	Для Каждого СтрокаТовар Из ИсходнаяТаблица Цикл
		Если ИскатьВозвратнуюТару И СтрокаТовар[к.Метка] = зВозвратнаяТара Тогда
			Продолжить;
		КонецЕсли;
		СтавкаНДСЧислом = УчетНДС.ПолучитьСтавкуНДС(СтрокаТовар[к.СтавкаНДС]);
		СтрокаТовар[к.СуммаНДС] = ?(СтавкаНДСЧислом = 0, 0, Окр(СтрокаТовар.СуммаРублевая * СтавкаНДСЧислом /(100 + СтавкаНДСЧислом),2));
		Если Параметры.СуммаВключаетНДС Тогда
			СтрокаТовар[к.Сумма] = СтрокаТовар.СуммаРублевая;
		Иначе
			СтрокаТовар[к.Сумма] = СтрокаТовар.СуммаРублевая - СтрокаТовар[к.СуммаНДС];
		КонецЕсли;
	КонецЦикла;
	
	// Пересчитаем зависимые колонки
	Если ИсходнаяТаблица.Колонки.Найти(к.Цена) <> Неопределено Тогда
		Если Параметры.ЦенаВключаетНДС <> Неопределено Тогда
			ЦенаВключаетНДС = Параметры.ЦенаВключаетНДС;
		Иначе
			ЦенаВключаетНДС = Параметры.СуммаВключаетНДС;
		КонецЕсли;
		Если ЦенаВключаетНДС Тогда
			Знак =  0;
		Иначе
			Знак = -1;
		КонецЕсли;
		Для Каждого СтрокаТовар Из ИсходнаяТаблица Цикл
			Если ИскатьВозвратнуюТару И СтрокаТовар[к.Метка] = зВозвратнаяТара Тогда
				Продолжить;
			КонецЕсли;
			Если СтрокаТовар[к.Количество] <> 0 Тогда
				Количество = СтрокаТовар[к.Количество];
			Иначе
				Количество = 1;
			КонецЕсли;
			СтрокаТовар[к.Цена] = (СтрокаТовар.СуммаРублевая + Знак * СтрокаТовар[к.СуммаНДС])/Количество;
		КонецЦикла;
	КонецЕсли;
	Если ИсходнаяТаблица.Колонки.Найти(к.СуммаБезНДС) <> Неопределено Тогда
		Для Каждого СтрокаТовар Из ИсходнаяТаблица Цикл
			Если ИскатьВозвратнуюТару И СтрокаТовар[к.Метка] = зВозвратнаяТара Тогда
				Продолжить;
			КонецЕсли;
			СтрокаТовар[к.СуммаБезНДС] = СтрокаТовар.СуммаРублевая - СтрокаТовар[к.СуммаНДС];
		КонецЦикла;
	КонецЕсли;
	Если ИсходнаяТаблица.Колонки.Найти(к.СуммаСНДС) <> Неопределено Тогда
		Для Каждого СтрокаТовар Из ИсходнаяТаблица Цикл
			Если ИскатьВозвратнуюТару И СтрокаТовар[к.Метка] = зВозвратнаяТара Тогда
				Продолжить;
			КонецЕсли;
			СтрокаТовар[к.СуммаСНДС] = СтрокаТовар.СуммаРублевая;
		КонецЦикла;
	КонецЕсли;
	
	ИсходнаяТаблица.Колонки.Удалить("СуммаРублевая");
	
КонецПроцедуры

// Процедура пересчитывает ДанныеДляПечати.ТабличнаяЧасть в рубли для договоров в у.е.
// Вызывается из процедуры «Печать»
Процедура ПерезаполнитьСуммыПоУЕвРубляхУКД(ДанныеДляПечати, ТекущееОснование, Ссылка) Экспорт
	
	СтруктураШапкиДокумента = ОбщегоНазначения.ПолучитьЗначенияРеквизитов(ТекущееОснование, "Организация, Контрагент, ДоговорКонтрагента, КурсВзаиморасчетов, КратностьВзаиморасчетов");
	КоэффициентПересчета = СтруктураШапкиДокумента.КурсВзаиморасчетов/СтруктураШапкиДокумента.КратностьВзаиморасчетов;
	
	РасчетСуммыНДСПоСтавке = УчетНДС.РасчетНДСвРубляхПоСтавкеДокумента(ДанныеДляПечати.Дата);
	
	СтрокиСчетаФактуры = ДанныеДляПечати.ТабличнаяЧасть;
	
	// Стоимость до изменения
	СтоимостьСНДСДоИзмененияРуб = Окр(СтрокиСчетаФактуры.Итог("СтоимостьСНДСДоИзменения")* КоэффициентПересчета,2);
	//Распределение суммы по таблице
	РаспределениеРуб = ОбщегоНазначения.РаспределитьПропорционально(СтоимостьСНДСДоИзмененияРуб,СтрокиСчетаФактуры.ВыгрузитьКолонку("СтоимостьСНДСДоИзменения"));
	Если Не РаспределениеРуб = Неопределено Тогда
		СтрокиСчетаФактуры.ЗагрузитьКолонку(РаспределениеРуб,"СтоимостьСНДСДоИзменения");
	КонецЕсли;
	
	// Стоимость после изменения
	СтоимостьСНДСПослеИзмененияРуб = Окр(СтрокиСчетаФактуры.Итог("СтоимостьСНДСПослеИзменения")* КоэффициентПересчета,2);
	//Распределение суммы по таблице
	РаспределениеРуб = ОбщегоНазначения.РаспределитьПропорционально(СтоимостьСНДСПослеИзмененияРуб,СтрокиСчетаФактуры.ВыгрузитьКолонку("СтоимостьСНДСПослеИзменения"));
	Если Не РаспределениеРуб = Неопределено Тогда
		СтрокиСчетаФактуры.ЗагрузитьКолонку(РаспределениеРуб,"СтоимостьСНДСПослеИзменения");
	КонецЕсли;

	МассивРаспределения = Новый Массив;
	
	Для Каждого СтрокаСчетаФактуры Из ДанныеДляПечати.ТабличнаяЧасть Цикл
		Если РасчетСуммыНДСПоСтавке Тогда
			//Выделение суммы НДС, Расчет суммы без НДС
			ЗначениеСтавкиНДС = УчетНДС.ПолучитьСтавкуНДС(СтрокаСчетаФактуры.СтавкаНДС);
			
			// Стоимость до изменения
			СтрокаСчетаФактуры.СуммаНДСДоИзменения = ?(ЗначениеСтавкиНДС = 0, 0, Окр(СтрокаСчетаФактуры.СтоимостьСНДСДоИзменения * ЗначениеСтавкиНДС/(100+ЗначениеСтавкиНДС),2));
			СтрокаСчетаФактуры.СтоимостьБезНДСДоИзменения = СтрокаСчетаФактуры.СтоимостьСНДСДоИзменения - СтрокаСчетаФактуры.СуммаНДСДоИзменения;
			
			// Стоимость после изменения
			СтрокаСчетаФактуры.СуммаНДСПослеИзменения = ?(ЗначениеСтавкиНДС = 0, 0, Окр(СтрокаСчетаФактуры.СтоимостьСНДСПослеИзменения * ЗначениеСтавкиНДС/(100+ЗначениеСтавкиНДС),2));
			СтрокаСчетаФактуры.СтоимостьБезНДСПослеИзменения = СтрокаСчетаФактуры.СтоимостьСНДСПослеИзменения - СтрокаСчетаФактуры.СуммаНДСПослеИзменения;
						
		Иначе
			// Стоимость до изменения
			МассивРаспределения.Очистить();
			МассивРаспределения.Добавить(СтрокаСчетаФактуры.СтоимостьБезНДСДоИзменения);
			МассивРаспределения.Добавить(СтрокаСчетаФактуры.СуммаНДСДоИзменения);
			МассивРаспределенныхСумм = ОбщегоНазначения.РаспределитьПропорционально(СтрокаСчетаФактуры.СтоимостьСНДСДоИзменения, МассивРаспределения);
			Если МассивРаспределенныхСумм <> Неопределено Тогда
				СтрокаСчетаФактуры.СтоимостьБезНДСДоИзменения = МассивРаспределенныхСумм[0];
				СтрокаСчетаФактуры.СуммаНДСДоИзменения = МассивРаспределенныхСумм[1];
			КонецЕсли;
			
			// Стоимость после изменения
			МассивРаспределения.Очистить();
			МассивРаспределения.Добавить(СтрокаСчетаФактуры.СтоимостьБезНДСПослеИзменения);
			МассивРаспределения.Добавить(СтрокаСчетаФактуры.СуммаНДСПослеИзменения);
			МассивРаспределенныхСумм = ОбщегоНазначения.РаспределитьПропорционально(СтрокаСчетаФактуры.СтоимостьСНДСПослеИзменения, МассивРаспределения);
			Если МассивРаспределенныхСумм <> Неопределено Тогда
				СтрокаСчетаФактуры.СтоимостьБезНДСПослеИзменения = МассивРаспределенныхСумм[0];
				СтрокаСчетаФактуры.СуммаНДСПослеИзменения = МассивРаспределенныхСумм[1];
			КонецЕсли;
		КонецЕсли;
		
		Если СтрокаСчетаФактуры.СуммаВключаетНДС Тогда
			СтрокаСчетаФактуры.СтоимостьБезНДСДоИзменения    = СтрокаСчетаФактуры.СтоимостьСНДСДоИзменения - СтрокаСчетаФактуры.СуммаНДСДоИзменения;
			СтрокаСчетаФактуры.СтоимостьБезНДСПослеИзменения = СтрокаСчетаФактуры.СтоимостьСНДСПослеИзменения - СтрокаСчетаФактуры.СуммаНДСПослеИзменения;
		КонецЕсли;
		
		// Разницы
		Если СтрокаСчетаФактуры.СуммаНДСДоИзменения - СтрокаСчетаФактуры.СуммаНДСПослеИзменения > 0 Тогда
			СтрокаСчетаФактуры.РазницаНДСУменьшение = СтрокаСчетаФактуры.СуммаНДСДоИзменения - СтрокаСчетаФактуры.СуммаНДСПослеИзменения;
			СтрокаСчетаФактуры.РазницаСНДСУменьшение = СтрокаСчетаФактуры.СтоимостьСНДСДоИзменения - СтрокаСчетаФактуры.СтоимостьСНДСПослеИзменения;
			СтрокаСчетаФактуры.РазницаБезНДСУменьшение = СтрокаСчетаФактуры.СтоимостьБезНДСДоИзменения - СтрокаСчетаФактуры.СтоимостьБезНДСПослеИзменения;
			
			СтрокаСчетаФактуры.РазницаНДСУвеличение = 0;
			СтрокаСчетаФактуры.РазницаСНДСУвеличение = 0;
			СтрокаСчетаФактуры.РазницаБезНДСУвеличение = 0;
		Иначе
			СтрокаСчетаФактуры.РазницаНДСУвеличение = -(СтрокаСчетаФактуры.СуммаНДСДоИзменения - СтрокаСчетаФактуры.СуммаНДСПослеИзменения);
			СтрокаСчетаФактуры.РазницаСНДСУвеличение = -(СтрокаСчетаФактуры.СтоимостьСНДСДоИзменения - СтрокаСчетаФактуры.СтоимостьСНДСПослеИзменения);
			СтрокаСчетаФактуры.РазницаБезНДСУвеличение = -(СтрокаСчетаФактуры.СтоимостьБезНДСДоИзменения - СтрокаСчетаФактуры.СтоимостьБезНДСПослеИзменения);
			
			СтрокаСчетаФактуры.РазницаНДСУменьшение = 0;
			СтрокаСчетаФактуры.РазницаСНДСУменьшение = 0;
			СтрокаСчетаФактуры.РазницаБезНДСУменьшение = 0;
		КонецЕсли;

	КонецЦикла;
	
	ДанныеДляПечати.ТабличнаяЧасть.ЗаполнитьЗначения(0, "ЦенаДоИзменения");
	ДанныеДляПечати.ТабличнаяЧасть.ЗаполнитьЗначения(0, "ЦенаПослеИзменения");
	
КонецПроцедуры

