Функция БилетНаСайтПоддержкиСлужебный(Аутентификация, ВыводитьСообщения = Истина)

	Билет = "";
	
	ИнформацияОбОшибке = "";
	СообщениеОбОшибке = "";
	
	Если Не ЗначениеЗаполнено(Аутентификация) Или Не ЗначениеЗаполнено(Аутентификация.Логин) Тогда
		КраткоеПредставлениеОшибки = НСтр("ru = 'Некорректный логин или пароль пользователя.'");
		СообщениеОбОшибке = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Не удалось подключиться к пользовательскому сайту по причине:
			|%1'"),
			КраткоеПредставлениеОшибки);
		ИнформацияОбОшибке = СообщениеОбОшибке;
	Иначе
		Логин = Аутентификация.Логин;
		Пароль = Аутентификация.Пароль;

		ИмяСервиса = "1C-EDO";
		URLСервиса = "https://login.1c.ru/rest/public/ticket/get";
		
		Заголовки = Новый Соответствие;
		Заголовки.Вставить("Content-Type", "application/json");
		
		ДопПараметрыЗапроса = Новый Структура;
		ДопПараметрыЗапроса.Вставить("Метод"                   , "POST");
		ДопПараметрыЗапроса.Вставить("Заголовки"               , Заголовки);
		ДопПараметрыЗапроса.Вставить("ФорматОтвета"            , 1);
		ДопПараметрыЗапроса.Вставить("ДанныеДляОбработки"      , ПараметрыTicketGetJSON(Логин, Пароль, ИмяСервиса));
		ДопПараметрыЗапроса.Вставить("ФорматДанныхДляОбработки", 1);
		ДопПараметрыЗапроса.Вставить("Таймаут"                 , 30);	
		
		РезультатОперации = ЗагрузитьСодержимоеИзИнтернет(
			URLСервиса,
			,
			,
			ДопПараметрыЗапроса); 
		
		Если РезультатОперации.КодСостояния = 200 Тогда
			
			Попытка
				
				ЧтениеJSON = Новый ЧтениеJSON;
				ЧтениеJSON.УстановитьСтроку(РезультатОперации.Содержимое);
				ОтветОбъект = ПрочитатьJSON(ЧтениеJSON);
				ЧтениеJSON.Закрыть();
				
				Билет = ОтветОбъект.ticket;
				
			Исключение
				
				ИнформацияОбОшибке = ИнформацияОбОшибке();
				ИнформацияОбОшибке = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru = 'Не удалось получить тикет аутентификации в сервисе %1.
					|Некорректный ответ сервиса.
					|Ошибка при обработке ответа сервиса:
					|%2
					|Код состояния: %3;
					|Тело ответа: %4'"),
					URLСервиса,
					ПодробноеПредставлениеОшибки(ИнформацияОбОшибке),
					РезультатОперации.КодСостояния,                                                 
					Лев(РезультатОперации.Содержимое, 5120));
				
				СообщениеОбОшибке =
				НСтр("ru = 'Ошибка аутентификации. Некорректный ответ сервиса.'");
				
			КонецПопытки;
			
		ИначеЕсли РезультатОперации.КодСостояния = 403 Тогда
			
			СообщениеОбОшибке  = НСтр("ru = 'Неверный логин или пароль.'");
			СохранитьПараметрыАутентификацииНаСайте(Неопределено);
			
		ИначеЕсли РезультатОперации.КодСостояния = 429 Тогда
			
			СообщениеОбОшибке = НСтр("ru = 'Превышено количество попыток аутентификации.
				|Повторите попытку позже.'");
			
		ИначеЕсли РезультатОперации.КодСостояния = 500 Тогда
			
			ИнформацияОбОшибке = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru = 'Не удалось получить тикет аутентификации в сервисе %1.
				|Внутренняя ошибка сервиса.
				|Код состояния: %2;
				|Тело ответа: %3'"),
				URLСервиса,
				РезультатОперации.КодСостояния,
				Лев(РезультатОперации.Содержимое, 5120));
			
			СообщениеОбОшибке =	НСтр("ru = 'Ошибка аутентификации. Внутренняя ошибка сервиса.'");
			
		ИначеЕсли РезультатОперации.КодСостояния = 0 Тогда
			
			ИнформацияОбОшибке = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru = 'Не удалось получить тикет аутентификации в сервисе %1.
				|%2'"),
				URLСервиса,
				РезультатОперации.ИнформацияОбОшибке);
				
				СообщениеОбОшибке = НСтр("ru = 'Ошибка подключения к сервису.'");
			
		Иначе
			
			ИнформацияОбОшибке = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru = 'Не удалось получить тикет аутентификации в сервисе %1.
				|Неизвестный код состояния ответа сервиса.
				|Код состояния: %2;
				|Тело ответа: %3'"),
				URLСервиса,
				РезультатОперации.КодСостояния,
				Лев(РезультатОперации.Содержимое, 5120));
			
			СообщениеОбОшибке =
			СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Ошибка аутентификации в сервисе (%1).'"),
			РезультатОперации.КодСостояния);
			
		КонецЕсли;
	КонецЕсли;
	
	
	Если ЗначениеЗаполнено(ИнформацияОбОшибке) Или ЗначениеЗаполнено(СообщениеОбОшибке) Тогда		
		Если ВыводитьСообщения Тогда
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ИнформацияОбОшибке);
		Иначе
			ВидОперации = НСтр("ru = 'Авторизация на сайте поддержки'");
			ЭлектронныеДокументыСлужебныйВызовСервера.ОбработатьОшибку(ВидОперации, ИнформацияОбОшибке, СообщениеОбОшибке);
		КонецЕсли;				
	КонецЕсли;
	
	Возврат Билет;
	
КонецФункции

// Получение билета на сайт поддержки
// Параметры:
//  Аутентификация	 - Структура 
//       * Логин
