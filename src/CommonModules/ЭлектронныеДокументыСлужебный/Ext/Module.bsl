Функция ОписаниеОснованияЭлектронногоДокумента(Знач ОснованиеЭД) Экспорт
	
	МетаданныеОснования = ОснованиеЭД.Метаданные();
	ИмяОснования        = МетаданныеОснования.Имя;
	СинонимОснования    = МетаданныеОснования.Синоним;

	РеквизитыОснования = Новый Массив;
	РеквизитыОснования.Добавить("Организация");
	РеквизитыОснования.Добавить("Контрагент");
	РеквизитыОснования.Добавить("Дата");
	РеквизитыОснования.Добавить("Номер");
	РеквизитыОснования.Добавить("СуммаДокумента");
	
	ШаблонЗапроса =
	"ВЫБРАТЬ
	|	&Псевдоним.Организация    КАК Организация,
	|	&Псевдоним.Контрагент     КАК Контрагент,
	|	&Псевдоним.Дата           КАК Дата,
	|	&Псевдоним.Номер          КАК Номер,
	|	&Псевдоним.СуммаДокумента КАК СуммаДокумента
	|ИЗ
	|	Документ.&ИмяДокумента КАК &Псевдоним
	|ГДЕ
	|	&Псевдоним.Ссылка = &Ссылка";
	
	ПсевдонимТаблицы = "Документ";
	
	Для Каждого ИмяРеквизита Из РеквизитыОснования Цикл
		
		ЗаменяемыйШаблон = "&Псевдоним." + ИмяРеквизита;
		
		ПрикладноеПредставление = ЭлектронныеДокументыПовтИсп.ИмяНаличиеОбъектаРеквизитаВПрикладномРешении(
			ИмяОснования + "." + ИмяРеквизита);
			
		Если ЗначениеЗаполнено(ПрикладноеПредставление) Тогда
			
			ШаблонЗапроса = СтрЗаменить(ШаблонЗапроса, ЗаменяемыйШаблон, ПрикладноеПредставление);
			
			Если ПсевдонимТаблицы = "Документ" Тогда
				СтрокиВМассиве = СтроковыеФункцииКлиентСервер.РазложитьСтрокуВМассивПодстрок(ПрикладноеПредставление, ".");
				ПсевдонимТаблицы = СтрокиВМассиве[0];
			КонецЕсли;
			
		Иначе
			
			РеквизитЕсть = Ложь;
			Если МетаданныеОснования.Реквизиты.Найти(ИмяРеквизита) <> Неопределено Тогда
				РеквизитЕсть = Истина
			КонецЕсли;
			Если Не РеквизитЕсть Тогда
				Для Каждого СтдРеквизит Из МетаданныеОснования.СтандартныеРеквизиты Цикл
					Если СтдРеквизит.Имя = ИмяРеквизита Тогда
						РеквизитЕсть = Истина;
						Прервать;
					КонецЕсли;
				КонецЦикла;
			КонецЕсли;
			
			Если Не РеквизитЕсть Тогда
				ШаблонЗапроса = СтрЗаменить(ШаблонЗапроса, ЗаменяемыйШаблон, "NULL");
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;
	
	ШаблонЗапроса = СтрЗаменить(ШаблонЗапроса, "&ИмяДокумента", ИмяОснования);
	ШаблонЗапроса = СтрЗаменить(ШаблонЗапроса, "&Псевдоним",    ПсевдонимТаблицы);
	
	ОписаниеОснованияЭД = Новый Структура;
	ОписаниеОснованияЭД.Вставить("Вид",            СинонимОснования);
	ОписаниеОснованияЭД.Вставить("Организация",    "");
	ОписаниеОснованияЭД.Вставить("Контрагент",     "");
	ОписаниеОснованияЭД.Вставить("Дата",           '00010101');
	ОписаниеОснованияЭД.Вставить("Номер",          "");
	ОписаниеОснованияЭД.Вставить("СуммаДокумента", 0);
	
	Запрос = Новый Запрос;
	Запрос.Текст = ШаблонЗапроса;
	Запрос.УстановитьПараметр("Ссылка", ОснованиеЭД);
	
	РезультатЗапроса = Запрос.Выполнить();
	Если РезультатЗапроса.Пустой() Тогда
		Возврат ОписаниеОснованияЭД;
	КонецЕсли;
	
	Выборка = РезультатЗапроса.Выбрать();
	Если Выборка.Следующий() Тогда
		ЗаполнитьЗначенияСвойств(ОписаниеОснованияЭД, Выборка);
	КонецЕсли;
	
	Возврат Новый ФиксированнаяСтруктура(ОписаниеОснованияЭД);
	
КонецФункции

Функция ИдентификаторыСвязанныхДокументов(ЭлектронныйДокумент, СпособОбменаЭД) Экспорт
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	ЭлектронныйДокументИсходящийИдентификаторыОснований.ИдентификаторЭДДокументаОснования КАК ИдентификаторЭДДокументаОснования,
		|	ЭДПрисоединенныеФайлыОснования.СтатусЭД КАК СтатусЭД,
		|	ЭДПрисоединенныеФайлыОснования.ТипЭлементаВерсииЭД КАК ТипЭлементаВерсииЭД,
		|	ЭДПрисоединенныеФайлыОснования.НаправлениеЭД КАК НаправлениеЭД,
		|	ЭлектронныйДокументИсходящийОснование.СостояниеЭДО КАК СостояниеЭДО,
		|	ЭлектронныйДокументИсходящийОснование.ТребуетсяИзвещение КАК ТребуетсяИзвещение,
		|	ЭлектронныйДокументИсходящийОснование.ТребуетсяПодтверждение КАК ТребуетсяПодтверждение,
		|	ЭлектронныйДокументИсходящийОснование.ВидЭД КАК ВидЭД,
		|	ЭлектронныйДокументИсходящийОснование.ВерсияРегламентаЭДО КАК ВерсияРегламентаЭДО,
		|	ЭлектронныйДокументИсходящийОснование.Ссылка КАК ЭлектронныйДокументОснование,
		|	ПРЕДСТАВЛЕНИЕ(ЭлектронныйДокументИсходящийОснование.ВидЭД) КАК ПредставлениеВидаДокументаОснования,
		|	ЭлектронныйДокументИсходящийОснование.НомерДокументаОтправителя КАК НомерДокументаОснования,
		|	ЭлектронныйДокументИсходящийОснование.ДатаДокументаОтправителя КАК ДатаДокументаОснования
		|ИЗ
		|	Документ.ЭлектронныйДокументИсходящий.ИдентификаторыОснованийВладельцаФайла КАК ЭлектронныйДокументИсходящийИдентификаторыОснований
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.ЭДПрисоединенныеФайлы КАК ЭДПрисоединенныеФайлыОснования
		|		ПО ЭлектронныйДокументИсходящийИдентификаторыОснований.ИдентификаторДокументаОснования = ЭДПрисоединенныеФайлыОснования.НомерЭД
		|			И ЭлектронныйДокументИсходящийИдентификаторыОснований.ИдентификаторЭДДокументаОснования = ЭДПрисоединенныеФайлыОснования.УникальныйИД
		|			И (ЭДПрисоединенныеФайлыОснования.ТипЭлементаВерсииЭД В (&ОсновныеТипы))
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Документ.ЭлектронныйДокументИсходящий КАК ЭлектронныйДокументИсходящийОснование
		|		ПО (ЭДПрисоединенныеФайлыОснования.ВладелецФайла = ЭлектронныйДокументИсходящийОснование.Ссылка)
		|ГДЕ
		|	ЭлектронныйДокументИсходящийИдентификаторыОснований.Ссылка = &ЭлектронныйДокумент";
	
	Запрос.УстановитьПараметр("ЭлектронныйДокумент", ЭлектронныйДокумент);
	Запрос.УстановитьПараметр("ОсновныеТипы", ЭлектронныеДокументыКлиентСервер.ОсновныеТипыЭД());
	
	ТаблицаИдентификаторов = Новый ТаблицаЗначений;
	ТаблицаИдентификаторов.Колонки.Добавить("ИдентификаторЭДДокументаОснования");
	
	Выборка = Запрос.Выполнить().Выбрать();
	Пока Выборка.СледующийПоЗначениюПоля("ИдентификаторЭДДокументаОснования") Цикл
		
		Если СпособОбменаЭД <> Перечисления.СпособыОбменаЭД.ЧерезОператораЭДОТакском
			И СпособОбменаЭД <> Перечисления.СпособыОбменаЭД.ЧерезСервис1СЭДО
			ИЛИ Выборка.НаправлениеЭД <> Перечисления.НаправленияЭД.Исходящий
			ИЛИ Выборка.СтатусЭД = Перечисления.СтатусыЭД.ОтклоненПолучателем
			ИЛИ Выборка.СтатусЭД = Перечисления.СтатусыЭД.Отклонен
			ИЛИ Выборка.СтатусЭД = Перечисления.СтатусыЭД.Аннулирован Тогда
			
			ЗаполнитьЗначенияСвойств(ТаблицаИдентификаторов.Добавить(), Выборка);
			Продолжить;
		КонецЕсли;
		
		НастройкиОбмена = Новый Структура;
		НастройкиОбмена.Вставить("ВидЭД", Выборка.ВидЭД);
		НастройкиОбмена.Вставить("ТипЭлементаВерсииЭД", Выборка.ТипЭлементаВерсииЭД);
		НастройкиОбмена.Вставить("Направление", Выборка.НаправлениеЭД);
		НастройкиОбмена.Вставить("СпособОбмена", СпособОбменаЭД);
		НастройкиОбмена.Вставить("ТребуетсяИзвещение", Выборка.ТребуетсяИзвещение);
		НастройкиОбмена.Вставить("ТребуетсяПодтверждение", Выборка.ТребуетсяПодтверждение);
		НастройкиОбмена.Вставить("ВерсияРегламентаЭДО", Выборка.ВерсияРегламентаЭДО);
		НастройкиОбмена.Вставить("ИспользоватьПодпись", Истина);
		
		МассивСтатусов = ВернутьМассивСтатусовЭД(НастройкиОбмена);
		
		ИндексТекущегоСтатуса = МассивСтатусов.Найти(Выборка.СтатусЭД);
		ИндексСтатусаПереданОператору = МассивСтатусов.Найти(Перечисления.СтатусыЭД.ПереданОператору);
		Если ИндексТекущегоСтатуса <> Неопределено
			И ИндексСтатусаПереданОператору <> Неопределено
			И ИндексТекущегоСтатуса >= ИндексСтатусаПереданОператору Тогда
			ЗаполнитьЗначенияСвойств(ТаблицаИдентификаторов.Добавить(), Выборка);
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат ТаблицаИдентификаторов;
	
КонецФункции

