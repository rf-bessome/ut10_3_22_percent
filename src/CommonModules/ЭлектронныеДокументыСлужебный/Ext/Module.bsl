Функция ПреобразоватьФорматЭД(ИмяФайлаXML, Параметры = Неопределено)
	
	Если Параметры = Неопределено Тогда
		Преобразователь = ЭлектронныеДокументыПовтИсп.ПреобразованиеXSL_ПараметрыПроизвольногоДокумента();
		Если Преобразователь = Неопределено Тогда
			Возврат Неопределено;
		КонецЕсли;
	Иначе
		ТекстПравила = ТекстПравилаПреобразованияФормата(Параметры);
		Если НЕ ЗначениеЗаполнено(ТекстПравила) Тогда
			Возврат Неопределено;
		КонецЕсли;
		
		Преобразователь = Новый ПреобразованиеXSL;
		
		ПараметрыXSL = Неопределено;
		Если Параметры.Свойство("ПараметрыXSL", ПараметрыXSL) И ЗначениеЗаполнено(ПараметрыXSL) Тогда
			
			Для Каждого ПараметрXSL Из ПараметрыXSL Цикл
				Если ТипЗнч(ПараметрXSL.Значение) = Тип("Структура") Тогда
					ЗначениеПараметра = КонвертироватьЗначениеПоИнструкции(ПараметрXSL.Значение);
					Если ЗначениеПараметра = Неопределено Тогда
						Продолжить;
					КонецЕсли;
				Иначе
					ЗначениеПараметра = ПараметрXSL.Значение;
				КонецЕсли;
				
				Если ТипЗнч(ЗначениеПараметра) = Тип("Строка") Тогда
					ЗначениеПараметра = "'" + ЗначениеПараметра + "'";
				ИначеЕсли ТипЗнч(ЗначениеПараметра) = Тип("Булево") Тогда
					ЗначениеПараметра = ?(ЗначениеПараметра, 1, 0);
				КонецЕсли;
				
				ДобавитьПараметрПреобразования(Преобразователь, ТекстПравила, ПараметрXSL.Ключ, ЗначениеПараметра);
			КонецЦикла;
			
		КонецЕсли;
		
		Преобразователь.ЗагрузитьИзСтроки(ТекстПравила);
		
	КонецЕсли;
	
	ИмяФайлаИтоговогоXML = ПолучитьИмяВременногоФайла("xml");
	
	ЗаписьИтоговогоXML = Новый ЗаписьXML;
	ЗаписьИтоговогоXML.ОткрытьФайл(ИмяФайлаИтоговогоXML);
	
	Попытка
		Преобразователь.ПреобразоватьИзФайла(ИмяФайлаXML, ЗаписьИтоговогоXML);
	Исключение
		ЗаписьИтоговогоXML.Закрыть();
		
		ВидОперации = НСтр("ru = 'Преобразование формата.'");
		ТекстОшибки = НСтр("ru = 'Не удалось преобразовать файл электронного документа с параметрами:'")
			+ Символы.ПС + ПараметрыПреобразованияВСтроку(Параметры)
			+ Символы.ПС + НСтр("ru = 'По причине:'")
			+ Символы.ПС + ПодробноеПредставлениеОшибки(ИнформацияОбОшибке());
		ЭлектронныеДокументыСлужебныйВызовСервера.ОбработатьОшибку(ВидОперации, ТекстОшибки);
		
		Возврат Неопределено;
	КонецПопытки;
	
	ЗаписьИтоговогоXML.Закрыть();
	
	Результат = Неопределено;
	Если Параметры = Неопределено ИЛИ Параметры.ИтоговыйФормат = "ПараметрыЭлектронногоДокумента" Тогда
		Результат = ЗначениеИзФайлаXML(ИмяФайлаИтоговогоXML, Тип("Структура"), Параметры);
		
	ИначеЕсли Параметры.ИтоговыйФормат = "ТабличныйДокумент" Тогда
		Результат = ЗначениеИзФайлаXML(ИмяФайлаИтоговогоXML, Тип("ТабличныйДокумент"), Параметры);
		
	ИначеЕсли Параметры.ИтоговыйФормат = "ТаблицаНоменклатуры" Тогда
		Результат = ЗначениеИзФайлаXML(ИмяФайлаИтоговогоXML, Тип("ТаблицаЗначений"), Параметры);
		
	ИначеЕсли Параметры.ИтоговыйФормат = "CML" Тогда
		Результат = Новый ДвоичныеДанные(ИмяФайлаИтоговогоXML);
		
	КонецЕсли;
	
	ЭлектронныеДокументыВнутренний.УдалитьВременныеФайлы(ИмяФайлаИтоговогоXML);
	
	Если ТипЗнч(Результат) = Тип("ТабличныйДокумент")
		И (Результат.ВысотаТаблицы = 0 Или Результат.ШиринаТаблицы = 0) Тогда
		// Могли не определиться размеры табличного документа, тогда выводим его в новый табличный документ.
		ТабличныйДокумент = Новый ТабличныйДокумент;
		ТабличныйДокумент.Вывести(Результат);
		Результат = ТабличныйДокумент;
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

