// Добавляет на форму страницы для отображения электронных документов и реквизиты для хранения табличных документов.
//
// Параметры:
//  Форма			 - УправляемаяФорма - форма, на которую требуется добавить новые элементы
//  ДеревоЗначений	 - ДеревоЗначений - дерево, содержащее ссылки на справочник ЭДПрисоединенныеФайлы которые требуется вывести на форме.
//
Процедура СоздатьРеквизитыИЭлементыДляПечатныхФорм(Форма, ДеревоЗначений)  Экспорт 
	
	МассивСтрокДерева = Новый Массив;
	ВыгрузитьСтрокиДереваРекурсивно(ДеревоЗначений.Строки, МассивСтрокДерева);
	
	ТабличныеДокументыФайловЭД = Новый Соответствие;
	
	МассивНовыхРеквизитовЭД = Новый Массив;
	
	Для Каждого СтрокаДерева Из МассивСтрокДерева Цикл
		
		Если СтрокаДерева.ВидЭД = Перечисления.ВидыЭД.ПроизвольныйЭД
			И Форма.ПараметрыПроизвольногоДокумента = Неопределено Тогда
			
			Если ПустаяСтрока(СтрокаДерева.ИмяРеквизита) Тогда
				СтрокаДерева.ИмяРеквизита = "ПрисоединенныйФайл";
			КонецЕсли;
			
			Продолжить;
		КонецЕсли;
		
		Если ПустаяСтрока(СтрокаДерева.ИмяРеквизита) Тогда
			ОбъектМетаданных = СтрокаДерева.ТипЭД.Метаданные();
			ИндексЗначения = Перечисления[ОбъектМетаданных.Имя].Индекс(СтрокаДерева.ТипЭД);
			ИмяЗначенияПеречисления = ОбъектМетаданных.ЗначенияПеречисления[ИндексЗначения].Имя;
			
			СтрокаДерева.ИмяРеквизита = "ТабличныйДокумент" 
				+ ?(СтрокаДерева.НаправлениеЭД = Перечисления.НаправленияЭД.Входящий, "Входящий", "Исходящий")
				+ ?(СтрокаДерева.ВидЭД = Перечисления.ВидыЭД.ПроизвольныйЭД, "Произвольный", "")
				+ ИмяЗначенияПеречисления + МассивНовыхРеквизитовЭД.Количество();
		КонецЕсли;

		СтруктураПодписей = ПодписиЭлектронногоДокумента(СтрокаДерева.Ссылка, СтрокаДерева.ТипЭД);
		
		ПараметрыПросмотра = Новый Структура;
		ПараметрыПросмотра.Вставить("УникальныйИдентификатор", Форма.УникальныйИдентификатор);
		ПараметрыПросмотра.Вставить("СтруктураПодписей", СтруктураПодписей);
		ПараметрыПросмотра.Вставить("СкрыватьИдентификаторДокумента", Ложь);
		ПараметрыПросмотра.Вставить("СкрыватьДопДанные", Форма.ОтключитьВыводДопДанных);
		ПараметрыПросмотра.Вставить("СкрыватьКопияВерна", Форма.ОтключитьВыводКопияВерна);
		ПараметрыПросмотра.Вставить("ПараметрыПроизвольногоДокумента", Форма.ПараметрыПроизвольногоДокумента);
		
		ДанныеЭД = ЭлектронныеДокументыВнутренний.ФайлДанныхЭД(СтрокаДерева.Ссылка, ПараметрыПросмотра);
		ЭтоТабличныйДокумент = ТипЗнч(ДанныеЭД) = Тип("ТабличныйДокумент");
		Если ЭтоТабличныйДокумент Тогда
			ТабличныеДокументыФайловЭД.Вставить(СтрокаДерева, ДанныеЭД);
		КонецЕсли;
		
		Если Форма.Элементы.Найти(СтрокаДерева.ИмяРеквизита) = Неопределено Тогда
			
			Если ЭтоТабличныйДокумент Тогда
				РеквизитФормы = Новый РеквизитФормы(СтрокаДерева.ИмяРеквизита, Новый ОписаниеТипов("ТабличныйДокумент"));
			Иначе
				РеквизитФормы = Новый РеквизитФормы(СтрокаДерева.ИмяРеквизита, Новый ОписаниеТипов("Строка"));
			КонецЕсли;
			
			МассивНовыхРеквизитовЭД.Добавить(РеквизитФормы);
		КонецЕсли;
	КонецЦикла;
	
	Если МассивНовыхРеквизитовЭД.Количество() > 0 Тогда	
		Форма.ИзменитьРеквизиты(МассивНовыхРеквизитовЭД);
	КонецЕсли;
		
	Для Каждого ЭлементКоллекции Из ТабличныеДокументыФайловЭД Цикл
		
		СтрокаДерева = ЭлементКоллекции.Ключ;
		ТабличныйДокумент = ЭлементКоллекции.Значение;
		
		Элемент = Форма.Элементы.Найти(СтрокаДерева.ИмяРеквизита); 
		
		Если Элемент = Неопределено Тогда
			
			ИмяСтраницы = "Страница" + СтрокаДерева.ИмяРеквизита;
			Страница = Форма.Элементы.Добавить(ИмяСтраницы, Тип("ГруппаФормы"), Форма.Элементы.СтраницыЭД);
			Страница.Вид = ВидГруппыФормы.Страница;
			Страница.ОтображатьЗаголовок = Ложь;
			Страница.Видимость = Истина;
			
			// Создание элементов под табличные документы.
				
			Форма[СтрокаДерева.ИмяРеквизита] = ТабличныйДокумент;
			
			НовыйЭлемент = Форма.Элементы.Добавить(СтрокаДерева.ИмяРеквизита, Тип("ПолеФормы"), Страница);
			НовыйЭлемент.Вид = ВидПоляФормы.ПолеТабличногоДокумента;
			НовыйЭлемент.ПоложениеЗаголовка = ПоложениеЗаголовкаЭлементаФормы.Нет;
			НовыйЭлемент.ПутьКДанным = СтрокаДерева.ИмяРеквизита;
			НовыйЭлемент.Редактирование = Ложь;
			
			НовыйЭлемент.УстановитьДействие("ОбработкаРасшифровки","Подключаемый_ТабличныйДокументОбработкаРасшифровки")
		Иначе
			Форма[СтрокаДерева.ИмяРеквизита].Очистить();
			ЭлектронныеДокументыВнутренний.ВывестиОбластьВТабличныйДокумент(Форма[СтрокаДерева.ИмяРеквизита], ТабличныйДокумент, "");
		КонецЕсли;
	КонецЦикла;
	
КонецПроцедуры

Процедура ВыгрузитьСтрокиДереваРекурсивно(ДеревоЗначений, МассивСтрок)
	
	Для Каждого СтрокаДерева Из ДеревоЗначений Цикл
		
