	СериализаторXDTO.ЗаписатьXML(ЗаписьXML, ВсеЗаписи, НазначениеТипаXML.Явное);
	ЗаписьXML.Закрыть();
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
