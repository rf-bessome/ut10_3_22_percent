		ПараметрыФайлаXML.Вставить("ИтоговыйФормат", "ПараметрыЭлектронногоДокумента");
	КонецЕсли;
	
	ПараметрыФайлаXML = ПреобразоватьФорматЭД(ИмяФайлаXML, ПараметрыФайлаXML);
	
	Возврат ПараметрыФайлаXML;
	
