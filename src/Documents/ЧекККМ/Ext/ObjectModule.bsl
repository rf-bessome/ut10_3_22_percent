	Если ТипЗнч(Основание) = Тип("ДокументСсылка.ЧекККМ") Тогда
		
		// Заполним вид операции.
		ВидыОперацийЧек = Перечисления.ВидыОперацийЧекККМ;
		Если Основание.ВидОперации = ВидыОперацийЧек.Продажа Тогда
